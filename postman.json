              "raw": "{\n  \"nombre\": \"Raqueta HEAD Speed\",\n  \"descripcion\": \"Raqueta profesional de carbono\",\n  \"precio\": 149.99,\n  \"marca\": \"HEAD\",\n  \"categoria\": \"raquetas\",\n  \"genero\": \"unisex\",\n  \"stock\": 10,\n  \"activo\": true,\n  \"usuario_id\": \"{{admin_id}}\",\n  \"clase\": \"admin\"\n}"
