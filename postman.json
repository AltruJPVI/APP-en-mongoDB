              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"usuario_id\": \"{{user_id}}\",\n  \"clase\": \"user\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/posts/{{post_id}}",
              "host": ["{{base_url}}"],
              "path": ["posts", "{{post_id}}"]
            }
          }
        },
        {
          "name": "✅ Admin elimina cualquier post (Éxito)",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"usuario_id\": \"{{admin_id}}\",\n  \"clase\": \"admin\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/posts/{{post_id}}",
              "host": ["{{base_url}}"],
              "path": ["posts", "{{post_id}}"]
            }
          }
        }
      ]
    },
    {
      "name": "6️⃣ Extras - Carrito",
      "item": [
        {
          "name": "Ver carrito",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/usuarios/{{user_id}}/carrito",
